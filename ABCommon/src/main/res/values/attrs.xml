<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="showRight" format="boolean"/>
        <attr name="showLeft" format="boolean"/>
        <attr name="centreTitle" format="reference|string"/>
        <attr name="leftTitle" format="reference|string"/>
        <attr name="rightTitle" format="reference|string"/>
        <attr name="leftDrawable" format="reference|integer"/>
        <attr name="rightDrawable" format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="ABViewPager">
        <attr name="autoScroll" format="boolean"/>
        <attr name="selectResId" format="reference|integer"/>
        <attr name="normalResId" format="reference|integer"/>
        <attr name="dogBackground" format="reference|color"/>
        <attr name="dogRadius" format="reference|integer"/>
        <attr name="scrollTime" format="reference|integer"/>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ValueView">
        <attr name="showValueIma" format="boolean"/>
        <attr name="showValueText" format="boolean"/>
        <attr name="valueText" format="reference|string"/>
        <attr name="valueHintText" format="reference|string"/>
        <attr name="keyText" format="reference|string"/>
        <attr name="img_icon" format="reference|integer"/>
    </declare-styleable>



</resources>